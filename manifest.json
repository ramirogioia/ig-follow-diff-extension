{
  "manifest_version": 3,
  "name": "IG Follow Diff",
  "version": "0.4.0",
  "description": "Encuentra qui√©n no te sigue y permite dejar de seguir (requiere Instagram abierto).",
  "permissions": ["storage", "tabs", "windows", "system.display"],
  "host_permissions": ["https://www.instagram.com/*"],
  "action": {
    "default_title": "IG Follow Diff",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.instagram.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
